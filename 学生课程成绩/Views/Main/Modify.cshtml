@*@ViewBag.Gp*@


@ViewBag.Stu.RelName<br /><br />

编辑学生选课以及分数信息<br />

<table>
    <thead>
        <tr>
            <th>课程名</th>
            <th>分数</th>
            <th>是0否1选修</th>
            <th>寒假0暑假1</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gp in ViewBag.Gp)
        {
            <tr>
                <td>@gp.Class.Name</td>
                <td>@gp.Point</td>
                <td>@gp.Type</td>
                <td>@gp.Season</td>
                <td>
                    <a href="Editstudyinfo?sname=@ViewBag.Stu.RelName&&cname=@gp.Class.Name&&point=@gp.Point&&type=@gp.Type&&season=@gp.Season&&id=@gp.Id">编辑</a>
                </td>
                <td>
                    <a href="deletestudyinfo?id=@gp.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

